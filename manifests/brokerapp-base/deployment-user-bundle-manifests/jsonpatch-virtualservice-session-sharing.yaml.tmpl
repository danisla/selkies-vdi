{{- if eq .AppSpec.Type "deployment" }}

{{- $enableSessionSharing := false }}
{{- if .AppParams.enableSessionSharing }}
  {{- if eq .AppParams.enableSessionSharing "true" }}
    {{- $enableSessionSharing = true }}
  {{- end}}
{{- end}}

{{- $sharingKey := default "" .AppParams.sessionKey }}

{{- if $enableSessionSharing }}
###
# rule for signaling server
###
- op: add
  path: /spec/http/0
  value:
    match:
      - uri:
          prefix: /{{.App}}/{{ $sharingKey }}/signalling/
    rewrite:
      uri: /
    route:
      - destination:
          host: {{.FullName}}-{{.ServiceName}}
          port:
            number: 8080

###
# rule for status server
###
- op: add
  path: /spec/http/1
  value:
    match:
      - uri:
          prefix: /{{.App}}/{{ $sharingKey }}/status/
    rewrite:
      uri: /
    route:
      - destination:
          host: {{.FullName}}-{{.ServiceName}}
          port:
            number: 8084

###
# rule for web interface
###
- op: add
  path: /spec/http/2
  value:
    match:
      - uri:
          prefix: /{{.App}}/{{ $sharingKey }}
    rewrite:
      uri: /
    route:
      - destination:
          host: {{.FullName}}-{{.ServiceName}}
          port:
            number: 80
{{- else}}
# Cannot have empty patch, so this is effectively a no-op.
- op: test
  path: /kind
  value: VirtualService
{{- end}}
{{- end}}